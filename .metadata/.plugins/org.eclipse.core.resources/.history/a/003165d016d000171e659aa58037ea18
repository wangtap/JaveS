
public class Test {
       public static void main (String[] args){
    	  // System .out.println();
    	   int r=2;
    	   if (r==1){
    		   System.out.println("参加一个月夏令营");
    	   }
    	   else  if (r==2){
    		   System .out.println("奖励惠普笔记本电脑一部");
    	   }
    	   else if(r==3){
    		   System .out.println("奖励移动硬盘一个");
    	   }
    	   else {
    		   System.out.println("无奖励");
    	   }
    	   int n=3;
    	   switch (n){
    		   case 2:
    			   //如果switch后面的括号中的内容等于2的话，
    			   //那么就执行下面的语句
    			   System.out.println("没错是2");
    			   break;
    		   case 3:
    			   System.out.println("没错是3");
    			   //break;
    	   }
    	   System.out.println
    	   
    	   
       }
}