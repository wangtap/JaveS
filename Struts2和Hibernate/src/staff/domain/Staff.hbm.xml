<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="staff.domain.Staff" table="staff" schema="strust2andhibernate">
        <id name="sid">
            <column name="sid" sql-type="int(11)"/>
        </id>
        <property name="sname">
            <column name="sname" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="department">
            <column name="department" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="hiredate">
            <column name="hiredate" sql-type="date" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(26)" length="26" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>